<a
	href="#header"
	id="back-to-top-button"
	class="scroll-link relative grid h-full w-full auto-cols-[1fr] grid-flow-col grid-cols-[auto_auto] grid-rows-[auto] justify-between gap-2 overflow-hidden p-6 text-warning-content no-underline sm:p-8 lg:gap-4 lg:p-10"
	role="button"
>
	<h3 class="pointer-events-none mb-0 self-end !leading-none !text-6xl sm:!text-7xl lg:!text-5xl">
		Back to the top
	</h3>
	<div
		id="back-to-top-button-animation"
		class="js-lottie-animation arrow-wrapper pointer-events-none relative z-10 select-none self-end"
		data-animation-name="back-to-top-button-animation"
		data-animation-source="/animation/lottie-back-to-top.json"
		data-animation-play-control="hover"
		data-animation-target="1"
		data-animation-initial-state="99"
	>
	</div>
</a>

<style>
	@media screen and (orientation: landscape) and (hover: none) {
		#back-to-top-button h3 {
			@apply font-semibold !text-5xl;
		}
	}

	.arrow-wrapper {
		grid-area: span 1 / span 1 / span 1 / span 1;
	}
</style>
