---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
	testimonial: CollectionEntry<'testimonial'>;
}

const { data } = Astro.props.testimonial;
---

<p class="my-4 !leading-normal text-base sm:text-xl lg:!leading-relaxed lg:!text-sm">
	{data.testimonial}
</p>

<div
	class="flex flex-row items-center justify-end justify-items-end self-end justify-self-end text-right md:mb-2 md:flex-col md:items-end"
>
	<div class="avatar order-2 ml-4 md:order-1 md:mb-2 md:ml-0">
		<div class="w-16 rounded-full">
			<Image
				src={data.avatar}
				widths={[72, 144, data.avatar.width]}
				class="rounded-circle"
				alt={data.name}
			/>
		</div>
	</div>

	<div class="mb-0 flex flex-col justify-end md:order-2">
		<div class="mb-0 font-sans-serif font-bold uppercase leading-none text-base sm:text-lg">
			{data.name}
		</div>
		<div class="-mt-1 leading-none text-xs sm:text-base lg:text-sm">
			{data.designation}, {data.companyName}
		</div>
	</div>
</div>
