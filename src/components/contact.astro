<a
	href="nowayjose"
	class="js-inject-email-link group/contact-button group pointer-events-auto relative flex h-full flex-col justify-between overflow-hidden p-6 no-underline md:p-10"
	id="contact-button"
	target="_blank"
	rel="noopener noreferrer"
>
	<div
		id="contact-button-animation"
		class="js-lottie-animation relative z-10 -ml-10 mt-0 w-[110%] max-sm:mb-10"
		data-animation-name="contact-button-animation"
		data-animation-source="/animation/lottie-contact-button-animation.json"
		data-animation-play-control="hover"
		data-animation-target="1"
		data-animation-initial-state="99"
	>
	</div>

	<div>
		<h3 class="contact-button-title mb-4 !leading-none text-white !text-6xl lg:!text-5xl">
			Wanna talk? Send me a message.
		</h3>
		<p
			id="email-text"
			class="js-inject-email-text mb-0 text-white text-base"
		>
		</p>
	</div>
</a>

<style>
	@media screen and (orientation: landscape) and (hover: none) {
		#contact-button {
			@apply p-4;
		}

		.contact-button-title {
			@apply font-semibold !text-5xl;
		}
	}
</style>
