---
import BaseLayout from '@/layouts/base.astro';

const title = `Error 404`;
---

<BaseLayout meta={{ title }}>
	<section class="flex h-full items-center p-16">
		<div class="container mx-auto my-8 flex flex-col items-center justify-center px-5">
			<div class="max-w-md text-center">
				<h2 class="mb-8 font-bold text-9xl">
					<span class="sr-only">Error</span>
					<span class="text-primary">404</span>
				</h2>
				<p class="font-semibold text-3xl md:text-3xl">Sorry, we couldn't find this page.</p>
				<p class="text-muted mb-8 mt-4 text-lg dark:text-slate-400">
					But don't worry, you can find plenty of other things on our homepage.
				</p>
				<a rel="noopener noreferrer" href="/" class="btn ml-4">Back to homepage</a>
			</div>
		</div>
	</section>
</BaseLayout>
